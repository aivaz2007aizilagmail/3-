#include <stdio.h>
#include <string.h>

int main() {
    char colors[3][15] = {"красный", "синий", "зеленый"};
    
    // Замена "красный" на "желтый"
    strcpy(colors[0], "желтый");
    
    // Добавление нового цвета в массив
    strcpy(colors[2], "фиолетовый");
    
    // Вывод измененного массива
    for (int i = 0; i < 3; i++) {
        printf("%s\n", colors[i]);
    }
    
    return 0;
}
